<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.zarslamgants25.enjoyindonesia.News.ListNews">


    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="150dp"
        android:id="@+id/cd_news"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id"
                android:layout_marginBottom="36dp"
                android:gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/judul_news"
                android:layout_alignEnd="@+id/judul_news" />

            <TextView
                android:id="@+id/judul_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="31dp"
                android:layout_toLeftOf="@+id/gambar_news"
                android:layout_toStartOf="@+id/gambar_news"
                android:fontFamily="cursive"
                android:gravity="right"
                android:text="Judul"
                android:textColor="#000"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/gambar_news"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light_focused"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/kategori_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:fontFamily="casual"
                android:text="Kategori Pariwisata" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
